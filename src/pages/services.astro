---
import Layout from '../layouts/Page.astro';

const seo = {
  title: "Astro Minimal Starter",
  description: "This is a starter repo for an blog built with Astro including open graph tags, canonical urls, RSS, sitemap support."
}

const services=[
    {
        title:"Personal Development",
        image:'https://images.pexels.com/photos/39853/woman-girl-freedom-happy-39853.jpeg?auto=compress&cs=tinysrgb',
        description:"There are many areas in personal develioment and exah of these influences the others, either positively or negatively, depending upon the state of the influential factor.For none to develop on a personal level one needs to bring about as much balance as in all the areas of their lives as possible"
    },
    {  
        title:"Business and Executive coaching", 
        image:'https://images.pexels.com/photos/39853/woman-girl-freedom-happy-39853.jpeg?auto=compress&cs=tinysrgb',
        description:"There are many areas in personal develioment and exah of these influences the others, either positively or negatively, depending upon the state of the influential factor.For none to develop on a personal level one needs to bring about as much balance as in all the areas of their lives as possible"
    }
    ]
---

<Layout seo={seo}>
  <div class="text-center ">
    <h1 class="text-blue-900 text-4xl py-8 px-8"> <span class="text-red-900">Our</span> Services</h1>

    <div>
        {
            services.map(({title,image,description},index)=>(
                <div class=" flex flex-col md:flex-row  py-4  px-4 sm:px-24 sm:text-left sm:py-4 max-w-8xl ">
                    <h2  class="sm:hidden text-blue-900 font-bold text-2xl w-auto p-4 ">{title}</h2>
                    <div class="w-full h-full">
                    <img src={image} alt="image name" class="object-cover w-full h-full" />    
                    </div>
                  
                    <div >
                        <h2 class="hidden text-blue-900 font-bold text-2xl px-4 sm:block">{title}</h2>
                        <p class="p-4">
                            {description}
                        </p>   
                      
                    </div>
                
                </div>
                <div class={`px-8 w-8xl ${index === services.length - 1 ? '' : 'border-t-2 border-black'}`}></div>
            ))
        }
     
    </div>
  
   
  </div>
</Layout>
